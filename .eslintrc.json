{
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "env": {
        "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "curly": [
            "error",
            "multi-line"
        ],
        "eol-last": [
            "error",
            "always"
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "consistent-return": "error",
        "prefer-const": "warn",
        "prefer-template": "warn",
        "no-await-in-loop": "warn",
        "no-console": "off",
        "no-eval": "error",
        "no-implied-eval": "error",
        "no-return-await": "warn",
        "no-undef": "off",
        "no-unused-vars": "warn",
        "no-useless-concat": "warn",
        "no-var": "warn",
        "require-atomic-updates": "off",
        "require-await": "warn",
        "valid-jsdoc": "warn"
    }
}